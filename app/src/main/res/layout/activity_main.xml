<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="#ffffff"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
        <ImageView
                android:id="@+id/Imagemejiro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logomejiro"
                android:adjustViewBounds="true"/>

        <ImageView
                android:id="@+id/Imagetitle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:src="@drawable/fushikititle" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal" >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal" >
            <ImageButton
                    android:id="@+id/Buttonpursuit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/pursuit"
                    android:background="#ffffff"
                    android:scaleType="centerInside"
                    android:layout_weight="1" />
            <ImageButton
                    android:id="@+id/Buttonsaccade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/saccade"
                    android:background="#ffffff"
                    android:scaleType="centerInside"
                    android:layout_weight="1" />

            <ImageButton
                android:id="@+id/Buttonokn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:src="@drawable/okn"
                android:background="#ffffff"
                android:scaleType="centerInside"
                android:layout_weight="1" />
             <ImageButton
                    android:id="@+id/Buttoncarolic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:src="@drawable/carolicett"
                    android:background="#ffffff"
                    android:scaleType="centerInside"
                    android:layout_weight="1" />
            <ImageButton
                    android:id="@+id/Buttoncarolicokn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:src="@drawable/carolicokn"
                    android:background="#ffffff"
                    android:scaleType="centerInside"
                    android:layout_weight="1" />
            <ImageButton
                    android:id="@+id/Buttonhelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:src="@drawable/help"
                    android:background="#ffffff"
                    android:scaleType="centerInside"
                    android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>